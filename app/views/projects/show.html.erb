<%= render PanelComponent.new panel: "well", justification: "px-4 lg:px-1 text-left rounded-lg", color: "bg-neutral" do %>
  <div class="py-12 lg:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <%= link_to "Back", "/#work", class: "btn btn-outline btn-primary hover:btn-outline hover:btn-secondary float-right" %>
      <div class="mx-auto max-w-2xl lg:mx-0">
        <p class="mt-6 text-lg leading-8 text-gray-600"><%= @project.section.title %></p>
        <h2 class="font-juana text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl"><%= @project.title %></h2>
        <p class="mt-6 text-lg leading-8 text-gray-600"><%= @project.subtitle %></p>
      </div>
    </div>
  </div>
<% end %>
<div class="my-4">
</div>
<%= render PanelComponent.new panel: "well", justification: "px-4 lg:px-1 text-left rounded-lg", color: "bg-primary" do %>
  <article class="mx-auto prose lg:prose-2xl text-black py-2">
    <%= @content.html_safe %>
  </article>
<% end %>

<div class="card shadow-xl md:p-10 delay-[300ms] duration-[600ms] taos:translate-x-[-200px] taos:opacity-0"
    data-taos-offset="100">
    <div class="card-body">
        <div class="card-title">
            <% unless project.link.empty? %>
                <a href="<%= project.link %>" class="flex gap-2" target="_blank">
                    <%= heroicon "link" , options: { class: "w-6 fill-black dark:fill-white" } %>
                        <h3 class="text-sm lg:text-xl">
                            <%= project.title %>
                        </h3>
                </a>
                <% else %>
                    <h3 class="text-sm lg:text-xl">
                        <%= project.title %>
                    </h3>
                    <% end %>
                        <a href="#" class="badge px-8">
                            <span class="text-xs lg:text-sm">
                                <%= project.subtitle %>
                            </span>
                        </a>
        </div>
        <% project.fields.each do |field| %>
            <div class="container">
                <p class="text-sm font-medium lg:text-lg">
                    <%= field.title %>
                </p>
                <p class="text-sm lg:text-md">
                    <%= field.body %>
                </p>
            </div>
            <% end %>
    </div>
</div>

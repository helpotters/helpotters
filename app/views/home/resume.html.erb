<header class="hero p-8 min-h-screen bg-[#0a192f] lg:px-40">
    <turbo-frame>
        <%= render "header" %>
    </turbo-frame>
</header>
<main class="bg-[#0a192f] p-4 lg:p-2 text-slate-200">
    <turbo-frame>
        <%= render "about_me" %>
    </turbo-frame>
    <turbo-frame>
        <% @sections.each_with_index do |section, count| %>
            <%= render partial: "section" , locals: {section: section, count: count + 1} %>
                <% end %>
    </turbo-frame>
</main>

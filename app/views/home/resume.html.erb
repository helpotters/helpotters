<div id="header" class="snap-always snap-start hero p-8 min-h-screen lg:px-40 font-inter">
    <turbo-frame>
        <%= render "header", cached: true %>
    </turbo-frame>
</div>
<div id="about_me" class="snap-always snap-start p-4 lg:p-2">
    <turbo-frame>
        <%= render "about_me", cached: true %>
    </turbo-frame>
</div>

<div id="work" class="snap-always snap-start p-4 lg:p-2">
    <turbo-frame>
        <% @sections.each_with_index do |section, count| %>
            <% cache section do  %>
              <%= render partial: "section" , locals: {section: section, count: count + 1} %>
            <% end %>
        <% end %>
    </turbo-frame>
</div>
